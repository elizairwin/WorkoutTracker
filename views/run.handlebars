<form>
  <div class="row d-flex justify-content-center">
    <h2 id="alert">Please log your run below.</h2>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="distance" id="distance">
    </div>
    <div class="col-md-2">
      <input type="text" class="form-control" placeholder="minutes" id="minutes">
    </div>
    <div class="col-md-2">
      <input type="text" class="form-control" placeholder="seconds" id="seconds">
    </div>
    <div class="col-md-1">
      <button type="button" class="btn btn-primary" id="submit-run">Submit</button>
    </div>
  </div>
  
</form>

<br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Distance</th>
      <th scope="col">Time</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each runs}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.distance}}</td>
      <td>{{this.minutes}}:{{this.seconds}}</td>
      <td>{{this.created}}</td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
